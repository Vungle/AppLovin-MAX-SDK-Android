<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.vungle.maxmediation.testapp.SplashActivity">


    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/applovin"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="MAX Demo App"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        app:layout_constraintTop_toBottomOf="@+id/logoTextView"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/titleVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="MAX Demo App"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_max_consent_flow"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titleVersion"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        android:text="AppLovin GDPR Consent Flow"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_gdpr"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_max_consent_flow"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        android:text="GDPR Consent"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_ccpa"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_gdpr"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        android:text="CCPA Consent"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_coppa"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_ccpa"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        android:text="COPPA Consent"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_coppa"
        app:layout_constraintEnd_toEndOf="@+id/logoTextView"
        android:text="Start"
        app:layout_constraintStart_toStartOf="@+id/logoTextView"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
